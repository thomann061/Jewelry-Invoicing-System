<Window x:Class="JewelryInvoicingSystem.DefWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JewelryInvoicingSystem"
        mc:Ignorable="d"
    Title="Inventory" Height="612.149" Width="618.73" WindowStartupLocation="CenterScreen"
       DataContext="{Binding RelativeSource={RelativeSource Self}}">

    <Grid>

        <DataGrid DataContext="{Binding Items, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" x:Name="dtaGrdInventory" 
                  CanUserDeleteRows="True"
                  AutoGenerateColumns="False"
                  HorizontalAlignment="Left" 
                  Margin="54,274,0,0" 
                  VerticalAlignment="Top" 
                  Height="219" 
                  Width="510">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Item" IsReadOnly="True" Binding="{Binding ItemName}"/>
                <DataGridTextColumn Header="Cost" IsReadOnly="True" Binding="{Binding ItemCost}"/>
                <DataGridTextColumn Header="Description" IsReadOnly="True" Binding="{Binding ItemDesc}"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button x:Name="btnClose" 
                Content="Cancel" 
                HorizontalAlignment="Left" 
                Margin="312,515,0,0" 
                VerticalAlignment="Top" 
                Width="104" 
                Height="35" 
                Style="{StaticResource redStyle}"
                Click="btnClose_Click"/>

        <Button x:Name="btnSaveAndClose" 
                Content="Save and Close" 
                HorizontalAlignment="Left" 
                Margin="445,515,0,0" 
                VerticalAlignment="Top" 
                Width="103" 
                Height="35" 
                Style="{StaticResource grayButtons}"
                Click="btnSaveAndClose_Click"/>

        <Button x:Name="btnAddNew" 
                Content="Add New Item" 
                HorizontalAlignment="Left" 
                Margin="54,47,0,0" 
                VerticalAlignment="Top" 
                Width="120" 
                Style="{StaticResource grayButtons}"
                Height="34" Click="btnAddNew_Click"/>

        <Button x:Name="btnEdit" 
                Content="Edit Existing Item" 
                HorizontalAlignment="Left" 
                Margin="54,104,0,0" 
                VerticalAlignment="Top" 
                Width="120" 
                Height="34" 
                Style="{StaticResource grayButtons}"
                Click="btnEdit_Click"/>

        <Button x:Name="btnDelete" 
                Content="Delete Item" 
                HorizontalAlignment="Left" 
                Margin="54,159,0,0" 
                VerticalAlignment="Top" 
                Width="120" 
                Height="34"
                Style="{StaticResource grayButtons }" Click="btnDelete_Click"/>

        <Label x:Name="lblName" 
               Content="Item Name:" 
               HorizontalAlignment="Left" 
               Margin="291,43,0,0" 
               VerticalAlignment="Top"/>

        <Label x:Name="lblCost" 
               Content="Item Cost:      $" 
               HorizontalAlignment="Left" 
               Margin="291,85,0,0" 
               VerticalAlignment="Top"/>

        <Label x:Name="lblDescrip" 
               Content="Item Description:" 
               HorizontalAlignment="Left" 
               Margin="291,129,0,0" 
               VerticalAlignment="Top"/>

        <TextBox x:Name="txtName" 
                 HorizontalAlignment="Left" 
                 Height="23" 
                 Margin="383,46,0,0" 
                 TextWrapping="Wrap" 
                 Text="" 
                 VerticalAlignment="Top" 
                 Width="120"
                 IsEnabled="False"/>

        <TextBox x:Name="txtCost" 
                 HorizontalAlignment="Left" 
                 Height="23" 
                 Margin="383,85,0,0" 
                 TextWrapping="Wrap" 
                 Text="" 
                 VerticalAlignment="Top" 
                 Width="120"
                 IsEnabled="False"/>

        <Button x:Name="btnCancel" 
                Content="Cancel" 
                HorizontalAlignment="Left" 
                Margin="326,228,0,0" 
                VerticalAlignment="Top" 
                Width="100" 
                Height="30"
                Style="{StaticResource redStyle}"
                Click="btnCancel_Click" Visibility="Hidden"
                
                />

        <Button x:Name="btnSave" 
                Content="Save and Stay" 
                HorizontalAlignment="Left" 
                Margin="464,228,0,0" 
                VerticalAlignment="Top" 
                Width="100" 
                Height="30"
                IsEnabled="False" 
                Style="{StaticResource grayButtons}"
                Click="btnSave_Click"/>
        
        <TextBox x:Name="txtItemDescription" 
                 HorizontalAlignment="Left" 
                 Height="64" 
                 Margin="312,159,0,0" 
                 TextWrapping="Wrap" 
                 Text="" 
                 VerticalAlignment="Top" 
                 Width="252"
                 IsEnabled="False"/>

    </Grid>
</Window>
